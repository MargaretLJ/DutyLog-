<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top polygon image -->

    <!-- Company logo -->

    <ImageView
        android:id="@+id/top_polygon"
        android:layout_width="600dp"
        android:layout_height="276dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="-17dp"
        android:layout_marginTop="-18dp"

        android:scaleType="fitStart"
        android:src="@drawable/top_polygon" />

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="113dp"
        android:layout_height="67dp"
        android:layout_below="@id/top_polygon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/company_logo" />

    <!-- Login text -->
    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@id/company_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Employee ID field -->
    <EditText
        android:id="@+id/employee_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="EMPLOYEE ID"
        android:background="@drawable/rounded_edit_text"
        android:textColorHint="#000000"
        android:padding="12dp"
        android:layout_below="@id/login_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:inputType="text" />

    <!-- Password field -->
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:textColorHint="#000000"
        android:background="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:layout_below="@id/employee_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:inputType="textPassword" />

    <!-- Login button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textColor="#FFFFFF"
        android:backgroundTint="#120063"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <!-- Bottom polygon image -->
    <ImageView
        android:id="@+id/bottom_polygon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/bottom_polygon" />
</RelativeLayout>
