<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Left side (profile and company name) -->

    <!-- Company logo -->
    <LinearLayout
        android:id="@+id/left_side"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#19116E"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_side"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Work Mode text -->
        <TextView
            android:id="@+id/working_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Mode"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintMarginStart="24dp"
            app:layout_constraintMarginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <ImageView
        android:id="@+id/company_label"
        android:layout_width="125dp"
        android:layout_height="91dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/company_logo"
        app:layout_constraintMarginStart="16dp"
        app:layout_constraintMarginTop="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Right side (slider and profile image) -->
    <LinearLayout
        android:id="@+id/right_side"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_side"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Big slider -->
        <SeekBar
            android:id="@+id/slider"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toTopOf="@+id/profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintMarginBottom="16dp"
            app:layout_constraintMarginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

    <ImageView
        android:id="@+id/example_view"
        android:layout_width="62dp"
        android:layout_height="78dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/white_person_profile"
        app:layout_constraintEnd_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toTopOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>

